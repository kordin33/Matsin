{
  "compilerOptions": {
    "rootDir": "./",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@excalidraw/common": ["./packages/common/src/index.ts"],
      "@excalidraw/common/*": ["./packages/common/src/*"],
      "@excalidraw/excalidraw": ["./packages/excalidraw/index.tsx"],
      "@excalidraw/excalidraw/*": ["./packages/excalidraw/*"],
      "@excalidraw/element": ["./packages/element/src/index.ts"],
      "@excalidraw/element/*": ["./packages/element/src/*"],
      "@excalidraw/math": ["./packages/math/src/index.ts"],
      "@excalidraw/math/*": ["./packages/math/src/*"],
      "@excalidraw/utils": ["./packages/utils/src/index.ts"],
      "@excalidraw/utils/*": ["./packages/utils/src/*"]
    }
  },
  "include": ["packages", "excalidraw-app"],
  "exclude": ["examples", "dist", "types", "tests", "**/*.test.tsx", "**/*.test.ts", "**/tests/**", "excalidraw-app/*theme-example*", "excalidraw-app/angular-theme-example.component.ts", "excalidraw-app/react-theme-example.jsx", "excalidraw-app/vue-theme-example.vue"]
}
